  <!DOCTYPE html>
  <html>
  <head>
      <meta charset="utf-8">
      <title><%= coffeeShop.name %></title>
      <link rel="stylesheet" href="/css/coffeeshop.css">
  </head>
  <body>
      <h1><%= coffeeShop.name %></h1>
      <div class="image-text-container">
        <img src="/images/<%= coffeeShop.image %>" alt="<%= coffeeShop.name %>">
    </div>
      <p><%= coffeeShop.description %></p>
      <h2>Average Rating: <%= averageRating || 'No reviews yet' %></h2>
      <h3>Reviews</h3>
      <ul>
        <% reviews.forEach(review => { %>
          <li>
            <p>Rating: <%= review.rating %></p>
            <p>Comment: <%= review.comment %></p>
            <p>User: <%= review.username || 'Anonymous' %></p>
          </li>
        <% }); %>
      </ul>
      <form action="/add-review" method="post" class="review-form">
        <label for="rating">Rating:</label>
        <input type="number" id="rating" name="rating" min="1" max="5" required>
        <br>
        <label for="comment">Comment:</label>
        <textarea id="comment" name="comment" rows="4" cols="50" required></textarea>
        <br>
        <input type="hidden" name="coffeeshop_id" value="<%= coffeeShop._id %>">
        <button type="submit">Submit Review</button>
    </form>
  </body>
  </html>
