<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/make.css">
</head>
<body class="container">
    <h1>Admin Dashboard</h1>
    <div class="title"> 
        <h1>Add Coffee Shops</h1>
        <ul>
            <form method="POST" action="/admin/add-coffee-shop" enctype="multipart/form-data">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required><br>
                <label for="description">Description:</label>
                <textarea id="description" name="description" required></textarea><br>
                <label for="image">Image:</label>
                <input type="file" id="image" name="image" accept="image/*" required><br>
                <button type="submit">Add Coffee Shop</button>
            </form>
        </ul>
    </div>
    <div class="title">
        <h2>Delete from Database</h2>
    </div>
    <div class="title">
        <h2>Reviews</h2>
        <ul>
            <% reviews.forEach(review => { %>
                <li>
                    <p>Coffee Shop ID: <%= review.coffeeshop_id %></p>
                    <%= review.comment %> - <%= review.rating %> stars
                    <form method="POST" action="/admin/delete-review/<%= review._id %>">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
    <div class="title">
        <h2>Users</h2>
        <ul>
            <% users.forEach(user => { %>
                <li>    
                    <%= user.username %>
                    <form method="POST" action="/admin/delete-user/<%= user._id %>">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
    <div class="title">
        <h2>Coffee Shops</h2>
        <ul>
            <% coffeeShops.forEach(coffeeShop => { %>
                <li>
                    <%= coffeeShop.name %>
                    <form method="POST" action="/admin/delete-coffee-shop/<%= coffeeShop._id %>">
                        <button type="submit">Delete</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
</body>
</html>